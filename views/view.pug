doctype html
html(lang='en')
  head
    title RequestBin
    meta(charset='utf-8')
    link(rel='stylesheet', href='/styles.css')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;600&display=swap', rel='stylesheet')
  body
    #display-container
      h2 Requests
      each request in requests
        div(class='display')
          div(class='info') #{new Date(request.timestamp).toLocaleString()}
          div(class='info') #{request.requestLine}

          each val, key in request.header 
            div(class='info') #{key}: #{val}<br/>

          //- each val, key in request.body
          //-   div(class='info') body: #{key}: #{val}
          div(class='info') #{JSON.stringify(request.body)}
